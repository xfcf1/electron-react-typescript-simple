{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/web/*"],
      "root/*": ["./src/*"],
      "elec/*": ["./src/electron/*"]
    },
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true
  },
  "exclude": ["node_modules", "scripts", "acceptance-tests", "webpack", "jest"],
  "include": ["build", "public", "src"]
}
