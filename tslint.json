{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-config-prettier"
  ],
  "rules": {
    "no-trailing-whitespace": true,
    "quotemark": [
      true,
      "single"
    ],
    "semicolon": [
      true,
      "never"
    ],
    "space-within-parens": [
      true,
      0
    ],
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-console": false,
    "prefer-const": false,
    "no-bitwise": false,
    "jsx-no-lambda": false
  },
  "jsRules": {
    "ordered-imports": false
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js",
      "app/**"
    ]
  }
}